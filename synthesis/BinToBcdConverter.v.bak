module BinToBcdConverter (
    input  [31:0] dado_saida,
    output reg [3:0] bcd8,
    output reg [3:0] bcd7,
    output reg [3:0] bcd6,
    output reg [3:0] bcd5,
    output reg [3:0] bcd4,
    output reg [3:0] bcd3,
    output reg [3:0] bcd2,
    output reg [3:0] bcd1  
);

    always @(*) begin
        // divis√µes sucessivas
        bcd1 = dado_saida % 10;
        bcd2 = (dado_saida / 10) % 10;
        bcd3 = (dado_saida / 100) % 10;
        bcd4 = (dado_saida / 1000) % 10;
        bcd5 = (dado_saida / 10000) % 10;
        bcd6 = (dado_saida / 100000) % 10;
        bcd7 = (dado_saida / 1000000) % 10;
        bcd8 = (dado_saida / 10000000) % 10;
    end

endmodule